/dts-v1/;
#include <nordic/nrf52840_qfaa.dtsi>
#include "MechanicalSensor-pinctrl.dtsi"

/ {
	model = "Custom Board auto generated by nRF Connect for VS Code";
	compatible = "DSY,MechanicalSensor";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 DT_SIZE_K(48)>;
		};

		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000c000 DT_SIZE_K(472)>;
		};

		slot1_partition: partition@82000 {
			label = "image-1";
			reg = <0x00082000 DT_SIZE_K(472)>;
		};

		storage_partition: partition@f8000 {
			label = "storage";
			reg = <0x000f8000 DT_SIZE_K(32)>;
		};
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};
&gpiote {
	status = "okay";
};

&i2c0 {
    status = "okay";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";

    mlx90397_0: mlx90397@d {
        compatible = "dsy,mlx90397";
        reg = <0x0d>;
        status = "okay";
    };
};

&i2c1 {
    status = "okay";
    pinctrl-0 = <&i2c1_default>;
    pinctrl-1 = <&i2c1_sleep>;
    pinctrl-names = "default", "sleep";

    mlx90397_1: mlx90397@d {
        compatible = "dsy,mlx90397";
        reg = <0x0d>;
        status = "okay";
    };
};

&pinctrl {
	i2c0_default: i2c0_default {
		group1 {
			psels = <
				NRF_PSEL(TWIM_SCL, 0, 13)
				NRF_PSEL(TWIM_SDA, 0, 8)
			>;
		};
	};

	i2c0_sleep: i2c0_sleep {
		group1 {
			psels = <
				NRF_PSEL(TWIM_SCL, 0, 13)
				NRF_PSEL(TWIM_SDA, 0, 8)
			>;
		};
	};

	i2c1_default: i2c1_default {
		group1 {
			psels = <
				NRF_PSEL(TWIM_SCL, 0, 11) /* <-- 改成你的 I2C1 SCL */
				NRF_PSEL(TWIM_SDA, 1, 8) /* <-- 改成你的 I2C1 SDA */
			>;
		};
	};

	i2c1_sleep: i2c1_sleep {
		group1 {
			psels = <
				NRF_PSEL(TWIM_SCL, 0, 11) /* <-- 同上 */
				NRF_PSEL(TWIM_SDA, 1, 8) /* <-- 同上 */
			>;
		};
	};
};

